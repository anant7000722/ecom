<p id="notice"><%= notice %></p>

<h1>Products</h1>



<div class="row">
  <% @products.each do |product| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <%= link_to (image_tag product.image.url(:medium), class: 'image'), product %>
      </div>
    </div>
  <% end %>
</div>
